<h2><%= "You selected: #{@restaurant.name}" %></h2>

<ul>
  <li><%= "Category: #{@restaurant.category}" %></li>
  <li><%= "Address: #{@restaurant.address}" %></li>
</ul>

<p><strong>Reviews</strong></p>
<ul class="list-group">
  <% @restaurant.reviews.each do |review| %>
    <li class="list-group-item"><%= "Rating: #{review.rating} | #{review.content}" %></li>
  <% end %>
</ul>
<br>

<li><%= link_to "Add a review for this restaurant", new_restaurant_review_path(@restaurant) %></li>
<li><%= link_to "Back to Restaurant list", restaurants_path %></li>
